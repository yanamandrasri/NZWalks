@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>
@{
}
<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Code</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id" class="btn btn-light">Edit</a>
                    <button type="submit" asp-controller="Regions" asp-action="Delete" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>